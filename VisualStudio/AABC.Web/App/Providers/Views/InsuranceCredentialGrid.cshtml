@model IEnumerable<AABC.Web.App.Providers.Models.ProviderInsuranceCredentialDTO>

@Html.DevExpress().GridView(s => {

    s.Name = "ProviderInsuranceCredentialGrid";
    s.KeyFieldName = "Id";
    s.Width = Unit.Percentage(100);
    s.Height = Unit.Percentage(100);

    s.Settings.VerticalScrollBarMode = ScrollBarMode.Auto;
    s.Settings.ShowTitlePanel = false;

    s.SettingsLoadingPanel.Mode = GridViewLoadingPanelMode.Disabled;

    s.SettingsBehavior.AllowSort = true;
    s.SettingsBehavior.AllowGroup = false;
    s.SettingsBehavior.AllowFocusedRow = true;
    s.SettingsBehavior.AllowSelectSingleRowOnly = false;

    s.SettingsPager.PageSize = 200;

    // celll/row double click (http://kb.dymeng.com/kb/DevExMVCGridView)

    s.HtmlDataCellPrepared = (sender, e) =>
    {
        e.Cell.Attributes.Add("data-dym-cellClick", "ProviderInsuranceCredentialGrid");
        e.Cell.Attributes.Add("data-dym-visibleIndex", e.VisibleIndex.ToString());
        e.Cell.Attributes.Add("data-dym-fieldName", e.DataColumn.FieldName);
    };

    s.Columns.Add(col => {
        col.Name = "InsuranceName";
        //col.Width = 150;
        col.Caption = "Insurance";
        col.FieldName = "InsuranceName";
        col.UnboundType = DevExpress.Data.UnboundColumnType.String;
        col.HeaderStyle.HorizontalAlign = HorizontalAlign.Center;
    });

    s.Columns.Add(col =>
    {
        col.Name = "StartDate";
        col.Caption = "Start";
        col.FieldName = "StartDate";
        col.PropertiesEdit.DisplayFormatString = "d";
        col.Width = 75;
        col.HeaderStyle.HorizontalAlign = HorizontalAlign.Center;
        col.CellStyle.HorizontalAlign = HorizontalAlign.Center;
    });

    s.Columns.Add(col =>
    {
        col.Name = "EndDate";
        col.Caption = "End";
        col.FieldName = "EndDate";
        col.PropertiesEdit.DisplayFormatString = "d";
        col.Width = 75;
        col.HeaderStyle.HorizontalAlign = HorizontalAlign.Center;
        col.CellStyle.HorizontalAlign = HorizontalAlign.Center;
    });
}).Bind(Model).GetHtml()
