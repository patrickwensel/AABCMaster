@model AABC.Web.App.Hours.Models.ScrubOverviewVM

<script type="text/javascript" src="~/Scripts/Pages/HoursScrub.js" id="dxis_HoursScrubPageScripts"></script>


@Html.Partial("ScrubOverviewGrid", Model.Items)

@Html.DevExpress().PopupControl(
    s => {

        s.Name = "hoursScrubSummaryPopup";
        s.PopupElementID = "hoursScrubSummaryPopupAnchor";

        s.ShowHeader = false;
        s.ShowFooter = false;
        s.PopupAnimationType = AnimationType.None;
        s.CloseAnimationType = AnimationType.None;
        s.AllowDragging = false;
        s.AllowResize = false;
        s.AppearAfter = 0;
        s.DisappearAfter = 0;
        s.Width = 500;

        s.SettingsLoadingPanel.Enabled = false;
        
        s.SetContent(() => { ViewContext.Writer.Write("<div id='hoursScrubSummaryPopupContent'>test</div>"); });

    }
).GetHtml()


<div id="hoursScrubSummaryPopupAnchor">
    <div id="hoursScrubSummaryPopupContainer"></div>
</div>



<script type="text/javascript">
    HoursScrub.Initialize();
    $(function() {
        App.NavBar.InitView(@Html.Raw(Json.Encode(ViewBag.Push)));
    });
</script>