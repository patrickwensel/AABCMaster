@model AABC.PatientPortal.App.Terms.Models.TermsVM
<style type="text/css">
    div.terms {
    width: 100%;
    height: 300px;
    border: 1px solid #ccc;
    background: #f2f2f2;
    padding: 6px;
    overflow: auto;
    margin-bottom:20px;
}
</style>
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Terms and Conditions</h2>
        <small>Last updated: @Model.LastUpdated.ToShortDateString()</small>
    </div>
    <div class="col-lg-2">

    </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    <form action="@Url.Action("Accept","Terms")" method="post">
                        <div class="terms">@Html.Raw(Model.Text)</div>
                        @if (!Model.IsAccepted)
                        {
                        <button class="btn btn-block btn-primary" type="submit">Accept</button>
                        }
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
