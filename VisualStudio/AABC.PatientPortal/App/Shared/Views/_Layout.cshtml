<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>AABC Parent Portal | @ViewBag.Title</title>
    @Styles.Render("~/plugins/toastrStyles")
    @Styles.Render("~/plugins/laddaStyles")
    @if (IsSectionDefined("Styles")) {@RenderSection("Styles", required: false)}

    @Styles.Render("~/Content/css")
    @Styles.Render("~/font-awesome/css")
    
</head>
<body>

    <!-- Wrapper-->
    <div id="wrapper">

        <!-- Navigation -->
        @Html.Partial("_Navigation")

        <!-- Page wraper -->
        <div id="page-wrapper" class="gray-bg">

            <!-- Top Navbar -->
            @Html.Partial("_TopNavbar")

            <!-- Main view  -->
            @RenderBody()

            <!-- Footer -->
            @Html.Partial("_Footer")

        </div>
        <!-- End page wrapper-->

    </div>
    <!-- End wrapper-->


    <!-- dialog containers -->
    <div id="appconfirm"></div>
    <div id="appalert"></div>

    <div id="app-confirm" class="modal fade" aria-hidden="true">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Please Confirm</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <i class="fa fa-question fa-3x"></i>
                        <span style="margin-left: 1.5em;" id="app-confirm-prompt"></span>
                        <input id="app-confirm-result" type="hidden" value="cancel" />
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="button" id="app-confirm-cancel-button" class="btn btn-white" value="Cancel" />
                    <input type="button" id="app-confirm-ok-button" class="btn btn-primary" value="Ok" />
                </div>
            </div>
        </div>
    </div>



    @Scripts.Render("~/bundles/core")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/inspinia")
    @Scripts.Render("~/lib/dymeng")
    @Scripts.Render("~/app/app")
    @RenderSection("scripts", required: false)



</body>
</html>
